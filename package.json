{
  "name": "ls-hts-platform",
  "version": "0.1.0",
  "description": "LS증권 개인화 HTS 플랫폼",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "uvicorn api.main:app --reload --host 0.0.0.0 --port 8000",
    "frontend": "cd frontend && npm run dev",
    "dev": "npm run start",
    "test:backend": "pytest tests/",
    "test:frontend": "cd frontend && npm test",
    "build:frontend": "cd frontend && npm run build",
    "create-user": "python scripts/create_test_user.py",
    "create-data": "python scripts/create_test_data.py"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "trading",
    "hts",
    "stock",
    "korea"
  ],
  "author": "",
  "license": "MIT"
}
